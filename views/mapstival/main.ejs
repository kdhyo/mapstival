<!DOCTYPE html>
<html lang="ko">

<head>
  <title>Mapstival</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,700,800" rel="stylesheet">

  <link rel="stylesheet" href="/css/open-iconic-bootstrap.min.css">
  <link rel="stylesheet" href="/css/animate.css">

  <link rel="stylesheet" href="/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/css/owl.theme.default.min.css">
  <link rel="stylesheet" href="/css/magnific-popup.css">

  <link rel="stylesheet" href="/css/aos.css">

  <link rel="stylesheet" href="/css/ionicons.min.css">

  <link rel="stylesheet" href="/css/bootstrap-datepicker.css">
  <link rel="stylesheet" href="/css/jquery.timepicker.css">

  <link rel="shortcut icon" href="/images/favicon.ico" />

  <link rel="stylesheet" href="/css/flaticon.css">
  <link rel="stylesheet" href="/css/icomoon.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .dropbtn {
      background-color: none;
      color: none;
      padding: 0px;
      font-size: 0px;
      border: none;
      outline: none;
    }

    .dropdown {
      position: relative;
      display: inline-block;
      outline: none;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: #fff;
      min-width: 150px;
      box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.5);
      z-index: 1;
      outline: none;
    }

    .dropdown-content a {
      color: black;
      padding: 0;
      text-decoration: none;
      display: block;
      opacity: 0.5;
      outline: none;
    }

    .dropdown-content a:hover {
      background-color: #fff;
      opacity: 1;
      outline: none;
    }

    .dropdown:hover .dropdown-content {
      display: block;
      outline: none;
    }

    .dropdown:hover .dropbtn {
      background-color: none;
      outline: none;
    }

    button {
      border: 0px;
      outline: 0px;
      background-color: #fff;
      outline: none;
    }

    .buttons {
      text-align: center;
      padding-top: 30px;
      outline: none;
    }

    .area {
      width: 80px;
      height: 30px;
      border-width: 2.4px;
      border-radius: 5px;
      border-color: #85d3ff;
      text-align: center;
      color: #85d3ff;
      /* color: #85d3ff; */
      opacity: 1;
    }

    .year {
      width: 80px;
      height: 30px;
      border-width: 2.4px;
      border-radius: 5px;
      border-color: #a9b5fd;
      text-align: center;
      color: #a9b5fd;
      /* color: #a9b5fd; */
      opacity: 1;
    }

    .month {
      width: 80px;
      height: 30px;
      border-width: 2.4px;
      border-radius: 5px;
      border-color: #c49efe;
      text-align: center;
      color: #c49efe;
      /* color: #e389fc; */
      opacity: 1;
    }

    input {
      width: 80px;
      height: 40px;
      border-width: 2.4px;
      border-radius: 5px;
      border-color: #e389fc;
      text-align: center;
      background: #fff;
      color: #000;
      color: #e389fc;
      font-family: "나눔고딕", "NanumGothic", SDKukdetopokki-Lt;
    }


    .rcc {
      padding-top: 15px;
    }

    #festivaltitle {
      font-size: 20px;
      font-weight: 10;
      color: black;
    }
  </style>
</head>

<body>
  <div class="buttons">

    <div class="dropdown">
      <button onclick="goingGmap()" class="dropbtn"><img src="/images/map.png" width="150px"></button>
    </div>
    <br />
    <select onchange="changeArea(this.value)" class="area" id="area" name="area">
    </select>
    <select onchange="changeYear(this.value)" class="year" id="year" name="year">
    </select>
    <select onchange="changeMonth(this.value)" class="month" id="month" name="month">
    </select>

  </div>
  </div>
  <% include ../includes/topbutton %>
  <section class="ftco-section ftco-degree-bg">
    <div class="container">
      <div class="row" id="eventStart">
      </div>
      <div>
        <div class="col text-center">
          <div class="rcc" id="morebtn">
          </div>
        </div>
      </div>
    </div>
  </section>
  <br><br>
  <% include ../includes/footer %>


  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px">
      <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
      <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
        stroke="#F96D00" /></svg></div>

  <script src="/js/jquery.min.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/js/jquery-migrate-3.0.1.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/jquery.easing.1.3.js"></script>
  <script src="/js/jquery.waypoints.min.js"></script>
  <script src="/js/jquery.stellar.min.js"></script>
  <script src="/js/owl.carousel.min.js"></script>
  <script src="/js/jquery.magnific-popup.min.js"></script>
  <script src="/js/aos.js"></script>
  <script src="/js/jquery.animateNumber.min.js"></script>
  <script src="/js/bootstrap-datepicker.js"></script>
  <script src="/js/jquery.timepicker.min.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/topbutton.js"></script>

  <script type='text/javascript'>
    // 지역, 페이지번호, 날짜 초기 값 설정
    let nowYear = parseInt("<%- selected.year %>");
    let nowMonth = "<%- selected.month %>"
    //초기 날짜 설정
    if (nowMonth < 10) {
      nowMonth = `0${nowMonth}`;
    }
    let dataMerge = {
      area: "<%- selected.area %>",
      pageNum: 1,
      date: `${nowYear}${nowMonth}01`
    }
    //지역, 연도, 월, 현재날짜 설정 변수

    const areaAll = ['전국', '서울', '인천', '대전', '대구', '광주', '부산', '울산', '세종', '경기', '강원', '충북', '충남', '경북', '경남', '전북', '전남', '제주']
    const valueAll = ['', '1', '2', '3', '4', '5', '6', '7', '8', '31', '32', '33', '34', '35', '36', '37', '38', '39'];
    const yearAll = [nowYear - 1, nowYear, nowYear + 1];




    // 지역, 연도, 월 선택박스 생성
    async function optionAdd() {
      for (let i = 0; i < areaAll.length; i++) {
        if (valueAll[i] === dataMerge.area) {
          $('#area').append(`<option value="${valueAll[i]}" selected >${areaAll[i]}</option>`)
        } else {
          $('#area').append(`<option value="${valueAll[i]}" >${areaAll[i]}</option>`)
        }
      }
      for (const year in yearAll) {
        if (yearAll[year] === nowYear) {
          $('#year').append(`<option value="${yearAll[year]}" selected >${yearAll[year]}년</option>`)
        } else {
          $('#year').append(`<option value="${yearAll[year]}" >${yearAll[year]}년</option>`)
        }
      }
      for (let i = 1; i <= 12; i++) {
        if (i === parseInt(nowMonth)) {
          $('#month').append(`<option value="${i}" selected>${i}월</option>`)
        } else {
          $('#month').append(`<option value="${i}">${i}월</option>`)
        }
      }
    }

    function goingGmap() {
      location.href = `mapstival/gmap?area=${dataMerge.area}&date=${dataMerge.date}`
    }

    function changeArea(value) {
      dataMerge.area = value;
      dataMerge.pageNum = 1;
      $('#eventStart').empty();
      $('#morebtn').empty();
      festivalList()
    }

    function changeYear(value) {
      nowYear = value;
      dataMerge.date = `${nowYear}${nowMonth}01`;
      dataMerge.pageNum = 1;
      $('#eventStart').empty();
      $('#morebtn').empty();
      festivalList()
    }

    function changeMonth(value) {
      nowMonth = value;
      if (nowMonth < 10) {
        nowMonth = `0${nowMonth}`;
      }
      dataMerge.date = `${nowYear}${nowMonth}01`;
      dataMerge.pageNum = 1;
      $('#eventStart').empty();
      $('#morebtn').empty();
      festivalList()
    }

    function onMore() {
      dataMerge.pageNum += 1;
      festivalList()
    }

    function eventDataAdd(data) {
      if (data.firstimage === undefined) {
        $('#eventStart').append(`
          <div class="col-md-4 ftco-animate fadeInUp ftco-animated">
            <div class="blog-entry" data-aos-delay="100" >
              <form action="/mapstival/detail" method="get">
                <input type="hidden" name="id" value="${data.contentid}">
                <button type="submit">
                  <img  class="block-20" src="./images/imagenone7.png" width="335px" />
                </button>
              </form>
              <div class="text p-4 d-block">
                <div class="meta mb-3">
                  <div>일정</div>
                  <div class="appendHtml"> </div>
                  <div>${data.eventstartdate} ~ ${data.eventenddate}</div>
                  <div><a class="meta-chat"><span class="icon-chat"></span> 6</a></div>
                </div>
                <h3 id="festivaltitle">${data.title}<br></h3>
              </div>
            </div>
          </div>`
        );

      } else {
        $('#eventStart').append(`
          <div class="col-md-4 ftco-animate fadeInUp ftco-animated">
            <div class="blog-entry" data-aos-delay="100" >
              <form action="/mapstival/detail" method="get">
                <input type="hidden" name="id" value="${data.contentid}">
                <button type="submit">
                  <img  class="block-20" src="${data.firstimage}" width="335px" />
                </button>
              </form>
              <div class="text p-4 d-block">
                <div class="meta mb-3">
                  <div>일정</div>
                  <div class="appendHtml"> </div>
                  <div>${data.eventstartdate} ~ ${data.eventenddate}</div>
                  <div><a class="meta-chat"><span class="icon-chat"></span> 6</a></div>
                </div>
                <h3 id="festivaltitle">${data.title}<br></h3>
              </div>
            </div>
          </div>`
        );
      }
    }

    function festivalList() {
      axios.post(`http://localhost:3000/mapstival/search`, dataMerge)
        .then(function (response) {
          const list = response.data.items.item;
          if (Array.isArray(list)) {
            if (list !== undefined) {
              list.forEach(data => {
                eventDataAdd(data);
              })
              //More 버튼 생성 여부
              if (list.length === 6) {
                $('#morebtn').empty()
                $('#morebtn').append(`
                  <button name="buttonClick" onclick="onMore()">
                    <img src="/images/more.png" width="140px" height="60px" />
                  </button><br/><br/><br/><br/>`
                );
              } else {
                $('#morebtn').empty()
              }
            } else {
              $('#eventStart').empty();
              $('#eventStart').append(`<div>축제가 존재하지 않아용</div>`)
            }
          } else if (response.data.items === "") {
            $('#eventStart').empty();
            $('#eventStart').append(`<div>축제가 존재하지 않아용</div>`)
          } else {
            eventDataAdd(list);
          }

        })

    }

    function init() {
      festivalList()
      optionAdd()
    }
    init()
  </script>
</body>

</html>